<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Course</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>

    <%- include('partials/header') %>

    <main>
        <div class="container">
            <h1>Add a New Course</h1>
            <form action="/add-course" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Course Name:</label>
                    <input type="text" id="name" name="name" required>
                </div>

                <div class="form-group">
                    <label for="price">Price:</label>
                    <input type="number" id="price" name="price" step="0.01" required>
                </div>

                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea id="description" name="description" rows="4" required></textarea>
                </div>

                <div class="form-group">
                    <label for="image">Main Image:</label>
                    <input type="file" id="image" name="image" accept="image/*" required>
                </div>

                <!-- Existing Categories -->
                <div class="checkbox-group">
                    <label id="titleLabel" for="categories">Select Existing Category:</label>
                    <% categories.forEach(category => { %>
                        <input type="checkbox" id="category_<%= category._id %>" name="categories[]" value="<%= category._id %>">
                        <label for="category_<%= category._id %>"><%= category.name %></label>
                    <% }) %>
                </div>

                <!-- New Category -->
                <div class="form-group">
                    <label for="newCategory">Or Add a New Category:</label>
                    <input type="text" id="newCategory" name="newCategory" placeholder="New Category">
                </div>
                <div class="buttons single-button">
                    <button type="submit">Add Course</button>
                </div>
                
            </form>
        </div>
    </main>

    <%- include('partials/footer') %>

</body>
</html>
